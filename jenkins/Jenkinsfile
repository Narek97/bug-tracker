pipeline {
    agent any
    stages {
        stage('Unit Tests Backend') {
            agent {
                docker {
                    image 'golang:1.20'
                    args '-v /go/pkg/mod:/go/pkg/mod'
                }
            }
            steps {
                dir('bugtracker-backend') {
                    sh 'go test ./... -v'
                }
            }
        }
    }
}