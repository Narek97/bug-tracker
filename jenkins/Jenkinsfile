pipeline {
    agent any
    stages {
        stage('Unit Tests Backend') {
            agent {
                docker {
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }
            steps {
                dir('bugtracker-backend') {
                    sh 'GOCACHE=/tmp/go-cache GOMODCACHE=/tmp/go-mod go test -v ./...'
                }
            }
        }
    }
}