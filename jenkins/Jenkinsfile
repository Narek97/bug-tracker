pipeline {
    agent any

    stages {
        stage('Execute Unit Tests') {
            parallel {
                stage('Unit Tests Backend') {
                    agent {
                        docker {
                            image 'snakee/golang-junit:1.21'
                            reuseNode true
                        }
                    }
                    steps {
                        dir('bugtracker-backend') {
                            sh '''
                                export GOCACHE=/tmp/go-cache
                                export GOMODCACHE=/tmp/go-mod

                                go test -v ./... | go-junit-report > test-results.xml

                                # Generate coverage report
                                go test -coverprofile=coverage.out ./...
                                go tool cover -html=coverage.out -o coverage.html

                                mkdir -p reports
                                mv coverage.html reports/
                            '''
                        }
                    }
                    post {
                        always {
                            junit 'bugtracker-backend/test-results.xml'
                            publishHTML(target: [
                                allowMissing: false,
                                alwaysLinkToLastBuild: true,
                                keepAll: true,
                                reportDir: 'bugtracker-backend/reports',
                                reportFiles: 'coverage.html',
                                reportName: 'Backend Code Coverage Report'
                            ])
                        }
                    }
                }

                stage('Unit Tests Frontend') {
                    agent {
                        docker {
                            image 'node:18'
                            reuseNode true
                        }
                    }
                    steps {
                        dir('bugtracker-frontend') {
                            sh '''
                                npm install
                                npm test -- --ci --reporters=default --reporters=jest-junit
                                mkdir -p reports
                                rm -rf reports/coverage
                                mv coverage reports/
                            '''
                        }
                    }
                    post {
                        always {
                            junit 'bugtracker-frontend/test-results.xml'
                            publishHTML(target: [
                                allowMissing: false,
                                alwaysLinkToLastBuild: true,
                                keepAll: true,
                                reportDir: 'bugtracker-frontend/reports/coverage',
                                reportFiles: 'index.html',
                                reportName: 'Frontend Code Coverage Report'
                            ])
                        }
                    }
                }
            }
        }

        stage('Launch Application') {
            agent {
                docker {
                    image 'docker:27.5.1'
                    reuseNode true
                    args '-v /var/run/docker.sock:/var/run/docker.sock --user root'
                }
            }
            steps {
                sh '''
                    apk add --no-cache docker-compose
                    docker-compose up --build -d
                '''
            }
        }

        stage('Api Tests') {
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:focal'
                    reuseNode true
                    args '-u 0 --network="host"'
                }
            }
            steps {
                dir('tests-api') {
                    sh '''
                        npx wait-port http://localhost:8000/api/health --timeout=3000
                        npm install
                        npx playwright test
                    '''
                }
            }
            post {
                always {
                    junit 'tests-api/test-results/results.xml'
                    publishHTML(target: [
                        allowMissing: false,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'tests-api/playwright-report',
                        reportFiles: 'index.html',
                        reportName: 'API Test Report'
                    ])
                }
            }
        }

        stage('E2E Tests') {
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:focal'
                    reuseNode true
                    args '-u 0 --network="host"'
                }
            }
            steps {
                dir('tests-e2e') {
                    sh '''
                        npm install
                        npx playwright install --with-deps
                        npx playwright test --reporter=junit --output=e2e-test-results
                    '''
                }
            }
//             post {
//                 always {
//                     junit 'tests-e2e/test-results/results.xml'
//                     publishHTML(target: [
//                         allowMissing: false,
//                         alwaysLinkToLastBuild: true,
//                         keepAll: true,
//                         reportDir: 'tests-e2e/playwright-report',
//                         reportFiles: 'index.html',
//                         reportName: 'E2E Test Report'
//                     ])
//                 }
//             }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}